<h1 class="header">Cart Overview:</h1>
<% if @products.length < 1 %>
  Your cart is empty!
<% else %>
  <div class="row">
    <div class="col md-10">
      <div class="row row-cols-1 row-cols-md-3">
        <% @total = 0 %>
        <% @products.each do |product| %>
          <div class="col mb-4">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title"><%= link_to product.title, product_path(product.id) %></h5>

                <strong><%= product.price %> $</strong>
                <% @total += product.price.to_i %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col md-2">
      <h1>
        Sub Total: <strong><%= @total %> USD</strong>
      </h1>
      <!-- Button trigger modal -->
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
        Checkout
      </button>

      <!-- Modal -->
      <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Please Choose Payment Method</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <div class="form-check">
                <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1" checked>
                <label class="form-check-label" for="exampleRadios1">
                  PayPal
                </label>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
              <%= link_to "Proceed to PayPal", checkout_path, class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      </div>


    </div>
  </div>
<% end %>
