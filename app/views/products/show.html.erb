<div class="card mb-3" style="max-width: 540px;">
  <div class="row no-gutters">
    <div class="col-md-4">
      <%= image_tag @product.image, :class => "card-img" %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= @product.title %></h5>
        <p class="card-text"><%= @product.description %></p>
        <p class="card-text"><small class="text-muted">Price: <strong><%= @product.price %> USD</strong></small></p>
        <%= link_to 'Add To Cart', add_to_cart_product_path(@product.id), class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>




<!--<h2>Comments</h2>-->
<%#= render @product.comments %>
 
<!--<h2>Add a comment:</h2>-->
<%#= render 'comments/form' %>
 
<%= link_to 'Edit', edit_product_path(@product), class: "btn btn-secondary btn-sm" %>
<%= link_to 'Back', products_path, class: "btn btn-primary btn-sm" %>